<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Platformer.Views.ForgotPasswordPage"
    Title="Forgot Password Page">
    <ContentPage.Content>
        <StackLayout>
            <Label
                Text="How could you forget your password?"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand" />
            <Label
                Text="Just Kidding :)"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand" />

            <Label
                HorizontalOptions="Center"
                Text="Enter your email to reset your password:" />
            <Entry
                Text="{Binding Email}"
                Margin="25,5"
                Placeholder="Email" IsSpellCheckEnabled="False" IsTextPredictionEnabled="False" />
            <Button
                Margin="25,5"
                Text="Reset your password"
                Command="{Binding ResetPasswordCommand}" BackgroundColor="#B92828" CornerRadius="15" FontAttributes="Italic" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>