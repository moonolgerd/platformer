<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Platformer.ViewModels;assembly=Platformer"
             Title="Login"
             x:Class="Platformer.Views.LoginPage">
    <ContentPage.BindingContext>
        <viewModels:LoginViewModel />
    </ContentPage.BindingContext>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Login" Command="{Binding LoginCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Email" FontSize="Medium" />
            <Entry Text="{Binding Email}" FontSize="Small" />
            <Label Text="Password" FontSize="Medium" />
            <Entry Text="{Binding Password}" FontSize="Small" />
            <Button Command="{Binding LoginCommand}" Text="Login" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>